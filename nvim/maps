nmap fj ]m
nmap fk [m

set splitbelow
set splitright

" To screw myself up
nmap <up> <nop>
nmap <down> <nop>
nmap <left> <nop>
nmap <right> <nop>

map <C-j> 10j
map <C-k> 10k

nmap <CR> :nohlsearch<CR>
nmap ,, :nohlsearch<CR>

" paste replacing current word"
nmap <silent> cp "_cw<C-R>"<Esc>

" To be more natural
"nnoremap j gj
"nnoremap k gk

" Relative number
nnoremap <C-b> :call NumberToggle()<cr>

" Tab to navigate over tabs
map <Tab> <C-W>w

" Puts the filename
nmap <C-c> :put=expand('%:t:r')<CR>

" Save file
map ,w :w<CR>

" to replace line with yank
map D "_ddkp"

" to close buffer
map ,q :Bclose<cr>

" to move buffers
map zl :bn<CR>
map zh :bp<CR>

" maximize buffers
map zN <C-W>\|
map zn <C-W>=

nnoremap Q <nop>
nnoremap K <nop>

nmap fj ]m
nmap fk [m

set splitbelow
set splitright

" To screw myself up
nmap <up> <nop>
nmap <down> <nop>
nmap <left> <nop>
nmap <right> <nop>

map <c-j> 10j
map <c-k> 10k

nmap <CR> :nohlsearch<CR>
nmap ,, :nohlsearch<CR>

" Bookmarks

nnoremap <F13> mQ
nnoremap <F14> mW
nnoremap <F15> mE
nnoremap <F16> mR
nnoremap <F17> mR

nnoremap <F1> 'Q
nnoremap <F2> 'W
nnoremap <F3> 'E
nnoremap <F4> 'R
nnoremap <F5> 'T



" paste replacing current word"
nmap <silent> cp "_cw<C-R>"<Esc>

" To be more natural
"nnoremap j gj
"nnoremap k gk

" Relative number
" nnoremap <C-b> :call NumberToggle()<cr>

" Tab to navigate over tabs
map <Tab> <C-W>w

" Puts the filename
nmap <C-c> :put=expand('%:t:r')<CR>

" Save file
map ,w :w<CR>

" to replace line with yank
map D "_ddkp"

" to close buffer
map ,q :Bclose<cr>

" to move buffers
map zl :bn<CR>
map zh :bp<CR>

" maximize buffers
map zN <C-W>\|
map zn <C-W>=

nnoremap Q <nop>
nnoremap K <nop>

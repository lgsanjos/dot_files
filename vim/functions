" vim: filetype=vim

  " Switch to rspec files or implementation files
  function! SwitchRspecOrRuby(opt)
      if (expand('%:e') == 'rb')
              let l:bar = expand('%:t')
              let l:bar = substitute(l:bar, ".rb", "", "")
          if (expand('%') =~ '/spec/')
              let l:bar = substitute(l:bar, "_spec", "", "")
              let l:file_name = system("find . -name ".l:bar.".rb")
              execute a:opt." :e ".l:file_name
          else
              let l:file_name = system("find . -name ".l:bar."_spec.rb")
              execute a:opt." :e ".l:file_name
          endif
      endif
  endfunction

  " Rename the current file
  function! RenameFile()
    let old_name = expand('%')
    let new_name = input('New file name: ', expand('%'), 'file')
    if new_name != '' && new_name != old_name
      exec ':saveas ' . new_name
      exec ':silent !rm ' . old_name
      redraw!
    endif
  endfunction

  function! NumberToggle()
    if(&relativenumber == 1)
      set norelativenumber
      set number
    else
      set nonumber
      set relativenumber
    endif
  endfunc

  autocmd BufNewFile,BufRead *.json set ft=javascript

"vim:syntax=vim

" To screw myself up
nmap <up> <nop>
nmap <down> <nop>
nmap <left> <nop>
nmap <right> <nop>

map <C-j> 10j
map <C-k> 10k

" To be more natural
"nnoremap j gj
"nnoremap k gk

"esc will clear search
nnoremap <CR> :nohlsearch<CR><CR>
nnoremap ,, :noh<CR><CR>

" Arrow keys " noremap <Up> gk
" noremap <Down> gj

" nerdTree
map <C-n> :NERDTreeToggle<CR>
map <C-m> :NERDTreeFind<CR>
noremap <Leader>fu :CtrlPFunky<Cr>

" ctrp
" narrow the list down with a word under cursor
nnoremap <Leader>fU :execute 'CtrlPFunky ' . expand('<cword>')<Cr>

" Relative number
nnoremap <C-b> :call NumberToggle()<cr>

" Tab to navigate over tabs
map <Tab> <C-W>w

"nnoremap <C-m> <C-W>\|
"nnoremap <C-m> <C-W>=

"To run ruby test
"map ,r :w\|:!ruby %<cr>
map ,r :w\|:!clear;rake test:units TEST=% TESTOPTS=-v<cr>

"To add comments
map ,c :Commentary<CR>
map ,w :w<CR>

"to show whitespace
map ,t /\s\+$

"to replace line with yank
map D "_ddkp"

"to close buffer
map ,q :bd<cr>
